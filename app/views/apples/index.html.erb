<div class="page-header">
  <h1><small>you like apples? </small></br>how 'bout them apples?</h1>
</div>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Panel heading</div>
  <div class="panel-body">
    <p>click to like your favorite apple.</p>

    <!-- Table -->
    <% sorted_list = @apples.sort_by { |a| a.difference }.reverse %>
    <% sorted_list.each do |apple| %>
    <table class="apples-index">
      <tr>
        <td class="table-items"><h5><%= apple.yums.to_i %></h5></td>
        <td class="table-items"><%= button_to "yum", apple_yum_path(:id => apple.id), {class: "btn btn-xs btn-default"} %></td>
        <td class="table-items"><h4><%= apple.type %></h4></td>
        <td class="table-items"><%= button_to "yuck", apple_yuck_path(:id => apple.id), {class: "btn btn-xs btn-default"} %></td>
        <td class="table-items"><h5><%= apple.yucks.to_i %></h5></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>

<div class="new-apple">
  <h5>don't see your favorite apple?  add it here!</h5>
  <%= form_for Apple.new do |f| %>
    <%= f.text_field :type %>
    <br class="clearfix" />
    <br class="clearfix" />
  <%= f.submit "add a new apple", {class: "btn btn-sm btn-success"} %>
</div>
<% end %>